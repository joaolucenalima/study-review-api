generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String @id @default(uuid())
  name    String
  email   String @unique
  picture String

  tasks Task[]
}

model Sessions {
  session_id   String @id
  session_user String
}

model Task {
  id          String   @id @default(cuid())
  user_id     String?
  title       String
  description String
  completed   Boolean  @default(false)
  first_date  DateTime

  User      User?      @relation(fields: [user_id], references: [id])
  revisions Revision[]
}

model Revision {
  id        String   @id @default(cuid())
  task_id   String?
  day       DateTime
  completed Boolean  @default(false)

  Task Task? @relation(fields: [task_id], references: [id])
}
