generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String @id @default(uuid())
  name    String
  email   String @unique
  picture String

  tasks Tasks[]
}

model Sessions {
  session_id   String @id
  session_user String
}

model Tasks {
  id                String  @id @default(cuid())
  title             String
  first_date        String
  completed         Boolean @default(false)
  next_revision_day String
  user_id           String?

  User      User?       @relation(fields: [user_id], references: [id])
  revisions Revisions[]
}

model Revisions {
  id      String  @id @default(cuid())
  day     String
  revised Boolean
  task_id String?

  Task Tasks? @relation(fields: [task_id], references: [id])
}
