generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String @id @default(cuid())
  name    String
  email   String @unique
  picture String

  tasks Task[]
}

model Task {
  id        String   @id @default(cuid())
  title     String
  createdAt DateTime @default(now())
  userId    String?

  User User? @relation(fields: [userId], references: [id])
}
